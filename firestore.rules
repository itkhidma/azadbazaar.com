rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if user is blocked
    function isUserBlocked() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBlocked == true;
    }
    
    // Products - Read: Everyone, Write: Admin only
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Categories - Read: Everyone, Write: Admin only
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Banners - Read: Everyone, Write: Admin only
    match /banners/{bannerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Flash sales - Read: Everyone, Write: Admin only
    match /flashSales/{flashSaleId} {
      allow read: if true; // Anyone can view flash sales
      allow create, update, delete: if isAdmin(); // Only admins can manage
    }
  
    
    // Orders - Read: Owner or Admin, Write: Owner (create if not blocked), Admin (update/delete)
    match /orders/{orderId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // CHANGED: Block order creation if user is blocked
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       !isUserBlocked();
      allow update, delete: if isAdmin();
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read approved reviews
      // CHANGED: Block review creation if user is blocked
      allow create: if request.auth != null && 
                      request.resource.data.userId == request.auth.uid &&
                      !isUserBlocked();

      // Allow review owner or admin to update/delete everything
      allow update, delete: if request.auth != null && 
                              (resource.data.userId == request.auth.uid || isAdmin());

      // Allow any authenticated user to update only helpfulCount and helpfulBy fields
      allow update: if request.auth != null &&
                      request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['helpfulCount', 'helpfulBy', 'updatedAt']);
    }
    
    // Carts - Read/Write: Owner only (if not blocked)
    // CHANGED: Block cart operations if user is blocked
    match /carts/{userId} {
      allow read, write: if isOwner(userId) && !isUserBlocked();
    }
    
    // Users Collection
    match /users/{userId} {
      // Allow users to read their own document (needed to check block status)
      // Allow admins to read all users
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow user creation with restricted fields
      allow create: if isOwner(userId) && 
                       request.resource.data.uid == request.auth.uid &&
                       request.resource.data.role == 'customer' &&
                       request.resource.data.isAdmin == false;
      
      // Allow users to update their own profile (but not role or isAdmin)
      allow update: if isOwner(userId) && 
                       request.resource.data.role == resource.data.role &&
                       request.resource.data.isAdmin == resource.data.isAdmin;
      
      // Allow admins to update and delete any user
      allow update, delete: if isAdmin();
    }
  }
}
